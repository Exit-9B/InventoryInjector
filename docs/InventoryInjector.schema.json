    "castType": {
      "enum": [
        "ConstantEffect",
        "FireAndForget",
        "Concentration",
        "Scroll"
      ]
    },

    "match-castType": {
      "description": "Spell Casting Type",
      "anyOf": [
        { "$ref": "#/$defs/castType" },
        {
          "type": "object",
          "properties": {
            "anyOf": {
              "type": "array",
              "items": { "$ref": "#/$defs/castType" }
            }
          }
        }
      ]
    },

    "spellType": {
      "enum": [
        "Spell",
        "Disease",
        "Power",
        "LesserPower",
        "Ability",
        "Poison",
        "Enchantment",
        "Potion",
        "WortCraft",
        "LeveledSpell",
        "Addiction",
        "VoicePower",
        "StaffEnchantment",
        "Scroll"
      ]
    },

    "match-spellType": {
      "description": "Spell Type",
      "anyOf": [
        { "$ref": "#/$defs/spellType" },
        {
          "type": "object",
          "properties": {
            "anyOf": {
              "type": "array",
              "items": { "$ref": "#/$defs/spellType" }
            }
          }
        }
      ]
    },

    "assign-data": {
      "anyOf": [
        { "type": [ "string", "number", "boolean" ] }
      ]
    }
  }
}
